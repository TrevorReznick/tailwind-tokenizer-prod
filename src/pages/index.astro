---

import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/ButtonComponent.astro'
import Card  from '../components/ui/CardComponent.astro'
import { ArrowRight, Code, Laptop, Zap } from 'lucide-react'

---

<Layout title="Welcome">
  <div class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="relative py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center">
          <h1 class="text-4xl sm:text-6xl font-bold tracking-tight">
            Build Something
            <span class="text-primary"> Amazing</span>
          </h1>
          <p class="mt-6 text-xl text-muted-foreground max-w-2xl mx-auto">
            Create stunning web applications with modern tools and frameworks.
            Start building your next big idea today.
          </p>
          <div class="mt-10 flex gap-4 justify-center">
            <a href="/convert">
              <Button size="lg">
                Try Tailwind Converter
                <ArrowRight className="ml-2 h-4 w-4" />
              </Button>
            </a>
            <Button size="lg" variant="outline">
              Learn More
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-muted">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <Card class="p-6">
            <Zap className="h-12 w-12 text-primary mb-4" />
            <h3 class="text-xl font-semibold mb-2">Lightning Fast</h3>
            <p class="text-muted-foreground">
              Built on Astro for exceptional performance and SEO optimization.
            </p>
          </Card>
          <Card class="p-6">
            <Code className="h-12 w-12 text-primary mb-4" />
            <h3 class="text-xl font-semibold mb-2">Modern Stack</h3>
            <p class="text-muted-foreground">
              Leveraging the latest technologies including Astro, TypeScript, and Tailwind CSS.
            </p>
          </Card>
          <Card class="p-6">
            <Laptop className="h-12 w-12 text-primary mb-4" />
            <h3 class="text-xl font-semibold mb-2">Responsive Design</h3>
            <p class="text-muted-foreground">
              Beautiful and functional across all devices and screen sizes.
            </p>
          </Card>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-lg text-muted-foreground mb-8">
          Transform your Tailwind configurations into design tokens with our converter.
        </p>
        <a href="/convert">
          <Button size="lg" class="bg-primary text-primary-foreground">
            Start Converting Now
          </Button>
        </a>
      </div>
    </section>
  </div>
</Layout>